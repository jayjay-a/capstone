<%# these fields are added as a nested thing to project form%>
<div id = nested-fields class="nested-fields" style="width:350px">
  <div class="field">
    <%= f.label :job_type_id  %>
    <%= f.collection_select :job_type_id, JobType.all, :job_type_id, :job_type_description ,{prompt: "Select a status"}%>
  </div>

  <div class="field">
    <%= f.label :job_status_id  %>
    <%= f.collection_select :job_status_id, JobStatus.all, :job_status_id, :job_status_description ,{prompt: "Select a type"}%>
  </div>

  <div class="field">
    <%= f.label :job_start_date %>
    <%= f.date_select :job_start_date, id: :job_job_start_date %>
  </div>

  <div class="field">
    <%= f.label :job_end_date %>
    <%= f.date_select :job_end_date, id: :job_job_end_date %>
  </div>

  <%= link_to_remove_association "Remove Job", f %>
</div>
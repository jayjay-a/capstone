

<h1>Employee Statuses</h1>

<%= link_to raw("<i class=\"material-icons right\">add_circle</i>New Employee Status"), new_employee_status_path, class: "btn waves-effect waves-light right" %> 
<table class="responsive-table highlight">
  <thead>
    <tr>
      <th><%= sort_link(@search, :employee_status_description) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_statuses.each do |employee_status| %>
      <tr data-link=" <%= employee_status_path(employee_status) %>" >
        <td><%= employee_status.employee_status_description %></td>
        <td><%= link_to 'Edit', edit_employee_status_path(employee_status) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<style>
  tr{
    cursor: pointer;
    }
</style>
<script>
    $("tr[data-link]").click(function() {
      window.location = $(this).data("link")
    })
</script>
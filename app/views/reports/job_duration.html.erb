<p id="notice"><%= notice %></p>

<h2>Job Duration</h2>
<h6>
  Download:
  <%= link_to "Excel", reports_job_duration_path(format: "xlsx") %> |
  <%= link_to "PDF", reports_job_duration_path(format: "pdf") %>
</h6>

<table class="responsive-table">
  <thead>
  <tr>
    <th>Project ID</th>
    <th>Customer Name</th>
    <th>Customer Branch</th>
    <th>Job Type</th>
    <th>Job Start Date</th>
    <th>Job End Date</th>
    <th># of Days</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @duration_job.each do |duration| %>
      <tr>
        <td><%= duration['project_id'] %></td>
        <td><%= duration['customer_name'] %></td>
        <td><%= duration['customer_branch'] %></td>
        <td><%= duration['job_type_description'] %></td>
        <td><%= duration['job_start_date'] %></td>
        <td><%= duration['job_end_date'] %></td>
        <td><%= duration['days'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

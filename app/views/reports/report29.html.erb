<h1>Report29</h1>
<p id="notice"><%= notice %></p>

<h2>Show Assignments for specific Subcontractor</h2>
Download:
<%= link_to "Excel", reports_report29_path(format: "xlsx") %> |
<%= link_to "PDF", reports_report29_path(format: "pdf") %>

<table class="table">
  <thead>
  <tr>
    <th>Subcontractor name</th>
    <th>Task Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @assi_task.each do |subcontractor| %>
      <tr>
        <td><%= subcontractor['subcontractor_name'] %></td>
        <td><%= subcontractor['task_description'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>


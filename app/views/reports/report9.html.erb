<h1>Report9</h1>
<p id="notice"><%= notice %></p>

<h2>Show Projects with specific customer</h2>
<h6>Download:
  <%= link_to "Excel", reports_report9_path(format: "xlsx") %> |
  <%= link_to "PDF", reports_report9_path(format: "pdf") %></h6>

<table class="table">
  <thead>
  <tr>
    <th>Customer Name</th>
    <th>Customer Branch</th>
    <th>Project ID</th>
    <th>Bid Amount</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @specific_custproj.each do |projects| %>
      <tr>
        <td><%= projects['customer_name'] %></td>
        <td><%= projects['customer_branch'] %></td>
        <td><%= projects['project_id'] %></td>
        <td><%= projects['bid_amount'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
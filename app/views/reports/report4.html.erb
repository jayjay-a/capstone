<h2>Show Active Projects</h2>

<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Customer Name</th>
    <th>Project Status Description</th>
    <th>Project Type ID</th>
    <th>Bid Submit Date</th>
    <th>Project Start Date</th>
    <th>Project End Date</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @active_projects.each do |projects| %>
      <tr>
        <td><%= projects['project_id'] %></td>
        <td><%= projects['customer_name'] %></td>
        <td><%= projects['project_status_description'] %></td>
        <td><%= projects['project_type_id'] %></td>
        <td><%= projects['bid_submit_date'] %></td>
        <td><%= projects['project_start_date'] %></td>
        <td><%= projects['project_end_date'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<!--<h1>Report4</h1>-->
<p id="notice"><%= notice %></p>

<h2>Active Projects</h2>
<h6>Download:
  <%= link_to "Excel", reports_report4_path(format: "xlsx") %> |
  <%= link_to "PDF", reports_report4_path(format: "pdf") %></h6>

<table class="table">
  <thead>
  <tr>
    <th>Project ID</th>
    <th>Customer Name</th>
    <th>Customer Branch</th>
    <th>Project Type</th>
    <th>Bid Submit Date</th>
    <th>Project Start Date</th>
    <th colspan="7"></th>
  </tr>
  </thead>

  <tbody>
  <% @active_projects.each do |projects| %>
      <tr>
        <td><%= projects['project_id'] %></td>
        <td><%= projects['customer_name'] %></td>
        <td><%= projects['customer_branch'] %></td>
        <td><%= projects['project_type_description'] %></td>
        <td><%= projects['bid_submit_date'] %></td>
        <td><%= projects['project_start_date'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
wb = xlsx_package.workbook

wb.add_worksheet(name: "Denied Bids") do |sheet|
  # this is the head row of your spreadsheet
  sheet.add_row %w(Project_ID Customer_Name Customer_Branch Project_Type_Description Bid_Submit_Date)

  # each user is a row on your spreadsheet
  @bid_denied.each do |p|
    sheet.add_row [p['project_id'], p['customer_name'], p['customer_branch'],
                              p['project_type_description'], p['bid_submit_date']]
  end
end
<!--<h1>Report2</h1>-->
<p id="notice"><%= notice %></p>

<h2>Compare Projects by Job Type and Bid Amount</h2>

<%= form_tag reports_report2_path, method: :get do %>
    <h6>Download:
      <%= link_to "Excel", reports_report2_path(format: "xlsx", :q => params[:q], :t => params[:t]) %> |
      <%= link_to "PDF", reports_report2_path(format: "pdf",  :q => params[:q], :t => params[:t]) %>
    </h6>
<br>
    <div class="row">
      <div class="col s3">
    <%= label_tag(:t, "Job Type Description") %>
    <%= select_tag(:t, options_from_collection_for_select(JobType.all, "id", "job_type_description",params[:t]),:prompt => "Select a Job Type") %>
        <%= submit_tag("Submit") %>
        <%= link_to ("Clear"), reports_report2_path %>
      </div>
      <div class="input-field col s2">
        <%= text_field_tag :q, @bid_amount_in , :placeholder => "Bid Amount >" %>
      </div>
    </div>

<% end %>

<table class="table">
  <thead>
  <tr>
    <th>Project ID</th>
    <th>Customer Name</th>
    <th>Customer Branch</th>
    <th>Job Type</th>
    <th>Project Status</th>
    <th>Bid Amount</th>
    <th colspan="6"></th>
  </tr>
  </thead>

  <tbody>
  <% @great_bids.each do |item| %>
      <tr>
        <td><%= item['project_id'] %></td>
        <td><%= item['customer_name'] %></td>
        <td><%= item['customer_branch'] %></td>
        <td><%= item['job_type_description'] %></td>
        <td><%= item['project_status_description'] %></td>
        <td><%= item['bid_amount'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>



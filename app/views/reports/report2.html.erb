<h1>Report2</h1>
<p id="notice"><%= notice %></p>

<h2>Projects with Bid Amount greater than X dollars</h2>
Download:
<%= link_to "Excel", reports_report2_path(format: "xlsx") %> |
<%= link_to "PDF", reports_report2_path(format: "pdf") %>

<%= form_tag reports_report2_path, method: :get do %>
<%= label_tag(:q, "Bid amount >") %>
<%= text_field_tag :q, @bid_amount_input %>
<%= submit_tag("submit") %>
<% end %>

<table class="table">
  <thead>
  <tr>
    <th>Project ID</th>
    <th>Customer Name</th>
    <th>Customer Branch</th>
    <th>Project Type</th>
    <th>Project Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @great_bids.each do |item| %>
      <tr>
        <td><%= item['project_id'] %></td>
        <td><%= item['customer_name'] %></td>
        <td><%= item['customer_branch'] %></td>
        <td><%= item['project_type_description'] %></td>
        <td><%= item['project_status_description'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>



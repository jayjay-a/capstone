<!--<h1>Report2</h1>-->
<p id="notice"><%= notice %></p>

<h2>Projects with Bid Amount greater than X dollars</h2>

<%= form_tag reports_report2_path, method: :get do %>
    <h6>Download:
      <%= link_to "Excel", reports_report2_path(@bid_amount_in, format: "xlsx", :q => params[:q]) %> |
      <%= link_to "PDF", reports_report2_path(@bid_amount_in, format: "pdf", :q => params[:q]) %>
    </h6>

    <%= label_tag(:t, "Job Type Description") %>
    <%= collection_select :t, :job_type_id, JobType.all, :job_type_id, :job_type_description,
                          {:prompt => true}, { :class => 'browser-default', :selected => 1, "data-placeholder" => 'Select a Job Type'} %>

    <%= label_tag(:q, "Bid amount >") %>
    <%= text_field_tag :q, @bid_amount_in %>
    <%= submit_tag("submit") %>
<% end %>

<table class="table">
  <thead>
  <tr>
    <th>Project ID</th>
    <th>Customer Name</th>
    <th>Customer Branch</th>
    <th>Job Type</th>
    <th>Project Status</th>
    <th>Bid Amount</th>
    <th colspan="6"></th>
  </tr>
  </thead>

  <tbody>
  <% @great_bids.each do |item| %>
      <tr>
        <td><%= item['project_id'] %></td>
        <td><%= item['customer_name'] %></td>
        <td><%= item['customer_branch'] %></td>
        <td><%= item['job_type_description'] %></td>
        <td><%= item['project_status_description'] %></td>
        <td><%= item['bid_amount'] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>



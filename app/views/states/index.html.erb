<p id="notice"><%= notice %></p>

<h1>States</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th><%= sort_link(@search, :state_name) %></th>
      <th><%= sort_link(@search, :state_abbrev) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.state_name %></td>
        <td><%= state.state_abbrev %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Delete', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


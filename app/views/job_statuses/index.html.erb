

<h1>Job Statuses</h1>

<%= link_to raw("<i class=\"material-icons right\">add_circle</i>New Job Status"), new_job_status_path, class: "btn waves-effect waves-light right" %> 

<table class="table highlight">
  <thead>
    <tr>
      <th><%= sort_link(@search, :job_status_description, "Job Status Description") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_statuses.each do |job_status| %>
      <tr data-link=" <%= job_status_path(job_status) %>" tr>
        <td><%= job_status.job_status_description %></td>
        <td><%= link_to 'Edit', edit_job_status_path(job_status) %></td>
        <% if user_signed_in? && current_user.admin? %><td><%= link_to 'Delete', job_status,  method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%= paginate @job_statuses %></center>

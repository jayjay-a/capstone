<%= form_with(model: assignment, local: true) do |form| %>
  <% if assignment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
      <% assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :subcontractor_id %>
    <%= form.collection_select :subcontractor_id, Subcontractor.all, :subcontractor_id, :subcontractor_name ,{prompt: "Select a subcontractor"}%>
  </div>

  <div class="field">
    <%= form.label :employee_id %>
    <%= form.collection_select :employee_id, Employee.all, :employee_id, :first_name ,{prompt: "Select an employee"}%>
   </div>

  <div class="field">
    <%= form.label :task_id %>
    <%= form.collection_select :task_id, Task.all, :task_id, :task_description ,{prompt: "Select a task"}%>
  </div>

  <div class="field">
    <%= form.label :assignment_date %>
    <%= form.text_field :assignment_date, id: :assignment_assignment_date, placeholder: "YYYY-MM-DD", :class => 'datepicker' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

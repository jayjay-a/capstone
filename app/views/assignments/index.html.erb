<p id="notice"><%= notice %></p>

<h1>Assignments</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Subcontractor</th>
      <th>Task</th>
      <th>Employee</th>
      <th>Assignment date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.subcontractor.subcontractor_name %></td>
        <td><%= assignment.task.task_description %></td>
        <td><%= assignment.employee.first_name %></td>
        <td><%= assignment.assignment_date %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


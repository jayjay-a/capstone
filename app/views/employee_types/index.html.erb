

<h1>Employee Types</h1>

<%= link_to raw("<i class=\"material-icons right\">add_circle</i>New Employee Type"), new_employee_type_path, class: "btn waves-effect waves-light right" %> 
<table class="responsive-table highlight">
  <thead>
    <tr>
      <th><%= sort_link(@search, :employee_type_description) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_types.each do |employee_type| %>
      <tr data-link=" <%= employee_type_path(employee_type) %>" >
        <td><%= employee_type.employee_type_description %></td>
        <td><%= link_to 'Edit', edit_employee_type_path(employee_type) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<style>
  tr{
    cursor: pointer;
    }
</style>
<script>
    $("tr[data-link]").click(function() {
      window.location = $(this).data("link")
    })
</script>
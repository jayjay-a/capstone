

<h1>Project Statuses</h1>

<%= link_to raw("<i class=\"material-icons right\">add_circle</i>New Project Status"), new_project_status_path, class: "btn waves-effect waves-light right" %> 
<table class="responsive-table highlight">
  <thead>
    <tr>
      <th><%= sort_link(@search, :project_status_description, "Project Status Description") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_statuses.each do |project_status| %>
      <tr data-link=" <%= project_status_path(project_status) %>" >
        <td><%= project_status.project_status_description %></td>
        <td><%= link_to 'Edit', edit_project_status_path(project_status) %></td>
        <% if user_signed_in? && current_user.admin? %><td><%= link_to 'Delete', project_status,  method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%= paginate @project_statuses %></center>

<h1>Rental Equipments</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Rental description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rental_equipments.each do |rental_equipment| %>
      <tr>
        <td><%= rental_equipment.rental_description %></td>
        <td><%= link_to 'Show', rental_equipment %></td>
        <td><%= link_to 'Edit', edit_rental_equipment_path(rental_equipment) %></td>
        <td><%= link_to 'Destroy', rental_equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


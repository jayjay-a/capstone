<style>
  #panell {
    margin-top: 100px;
    padding: 0px;
    background-color: #ffffff;


  }

  #loginbtn {
    float: right;
    margin-bottom: 10px;
    margin-right: 10px;
  }

  #title {
    background-color: #448aff;
    color: black;
    padding: 8px;
    margin-top: 0px;
    height: 50px;
    text-align: center;
    font-weight: bolder;
  }

  form {
    padding: 0px;
    border-radius: 3px;
    box-sizing: border-box;
    font-weight: bolder;
  }

  #email, #password {
    margin-left: 20px;
    margin-right: 20px;

  }

  #checkbox {
    margin-left: 30px;
  }

  #linkies {
    margin-left: 20px;
  }

  .btn {
    background-color: #448aff;
  }

  html {
    background: url("../assets/Redesign.jpg");
    background-repeat: no-repeat;
    -webkit-background-size: cover;
    background-size: cover;
    position: relative;
    z-index: 1;

  }
  .wrapper {
    margin-top: 50px;
    text-align: center;
  }

  .title_text {
    font-size: 72px;
    margin-bottom: 20px;
    margin-top: 50px;
    font-family: 'montserratextra_bold';
    letter-spacing: 5px;
    font-weight: bolder;
    text-align: center;
    color: #edc734;
  }

  .sub-title {
    font-size: 20px;
    margin-bottom: 20px;
    font-family: 'Arial Black';
    letter-spacing: 5px;
    font-weight: bolder;
    text-align: center;
    color: white;
  }


</style>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<%# Title on the login page %>
<div class="wrapper">
  <div class="logo" data-role="header" data-position="fixed" data-tap-toggle="false">
    <img src="../assets/logo_title.png" alt="Da Fuck" class="centered">
  </div>
</div>




  <div class="container">
    <div class="row">
      <div class="col s6 offset-s3 z-depth-5" id="panell">
        <h5 id="title">Login</h5>
        <form>

          <div class="input-field" id="email">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="input-field" id="password">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div id="linkies"><%= render "devise/shared/links" %></div>

          <%= button_tag(:class => "btn waves-effect waves-light", :id => "loginbtn") do %>
            Login<i class="material-icons right">send</i>
          <% end %>


        </form>
      </div> <%# end panel %>
    </div> <%# end row %>
  </div> <%# end container%>
<% end %>


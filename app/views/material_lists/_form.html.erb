  <div class="field">
    <%= form.label :material_id  %>
    <%= form.collection_select :material_id, Material.all, :material_id, :material_description ,{prompt: "Select a material"}%>
  </div>

  <div class="field">
    <%= form.label :unit_price %>
    <%= form.text_field :unit_price, id: :material_list_unit_price %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.text_field :quantity, id: :material_list_quantity %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

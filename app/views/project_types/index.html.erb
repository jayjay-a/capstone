

<h1>Project Types</h1>

<%= link_to raw("<i class=\"material-icons right\">add_circle</i>New Project Type"), new_project_type_path, class: "btn waves-effect waves-light right" %> 
<table class="responsive-table">
  <thead>
    <tr>
      <th><%= sort_link(@search, :project_type_description) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_types.each do |project_type| %>
      <tr>
        <td><%= project_type.project_type_description %></td>
        <td><%= link_to 'Show', project_type %></td>
        <td><%= link_to 'Edit', edit_project_type_path(project_type) %></td>
        <td><%= link_to 'Delete', project_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

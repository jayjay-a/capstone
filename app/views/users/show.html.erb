<h3><%= @user.name %></h3>

<table width="50%">

  <tr colspan="20%">
    <td ><strong>Name: </strong></td>
    <td ><%= @user.name %></td>
  </tr>

  <tr>
    <td><strong>Email: </strong></td>
    <td><%= @user.email %></td>
  </tr>
  
  <% if user_signed_in? && current_user.admin? %>
  <tr>
    <td><strong>Admin?: </strong></td>
    <td><%= @user.admin %></td>
  </tr>
  <% end %>

  <tr>
    <td><strong>Created On:</strong></td>
    <td><%= @user.created_at.strftime("%m/%d/%Y") %></td>
  </tr>

</table>

</br>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to raw("<i class=\"material-icons right\">arrow_back</i>Back"),  users_path, class: "btn waves-effect w> aves-light grey" %>
<% else %>
  <%= link_to raw("<i class=\"material-icons right\">arrow_back</i>Back"),  root_path, class: "btn waves-effect waves-light grey" %> 
<% end %>

<%= link_to raw("<i class=\"material-icons right\">edit</i>Edit"), edit_user_path(@user), class: "btn waves-effect waves-light" %> 

<% if user_signed_in? && current_user.admin? %><%= link_to raw("<i class=\"material-icons right\">delete</i>Delete"), @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn waves-effect waves-ligh red right" %><% end %>

<h1>Users</h1>

<%= link_to raw("<i class=\"material-icons right\">add_circle</i>New User"), new_user_path, class: "btn waves-effect waves-light right" %> 
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th>admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% if current_user.admin? %><td><%= link_to 'Delete', user,  method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
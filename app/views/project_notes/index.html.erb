

<h1>Project Notes</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th><%= sort_link(@search, :project_id) %></th>
      <th><%= sort_link(@search, :project_notes) %></th>
      <th><%= sort_link(@search, :project_note_date) %></th>
      <th><%= sort_link(@search, :note_owner) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_notes.each do |project_note| %>
      <tr>
        <td><%= project_note.project_id %></td>
        <td><%= project_note.project_notes %></td>
        <td><%= project_note.project_note_date %></td>
        <td><%= project_note.note_owner %></td>
        <td><%= link_to 'Show', project_note %></td>
        <td><%= link_to 'Edit', edit_project_note_path(project_note) %></td>
        <td><%= link_to 'Delete', project_note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


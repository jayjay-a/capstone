<p id="notice"><%= notice %></p>

<h1>Subcontractors</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Subcontractor status</th>
      <th>Subcontractor name</th>
      <th>Subcontractor phone</th>
      <th>Subcontractor email</th>
      <th>Company</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subcontractors.each do |subcontractor| %>
      <tr>
        <td><%= subcontractor.subcontractor_status.subcontractor_status_description %></td>
        <td><%= subcontractor.subcontractor_name %></td>
        <td><%= subcontractor.subcontractor_phone %></td>
        <td><%= subcontractor.subcontractor_email %></td>
        <td><%= subcontractor.company %></td>
        <td><%= link_to 'Show', subcontractor %></td>
        <td><%= link_to 'Edit', edit_subcontractor_path(subcontractor) %></td>
        <td><%= link_to 'Destroy', subcontractor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<h1>Task Statuses</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th><%= sort_link(@search, :task_status_description) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_statuses.each do |task_status| %>
      <tr>
        <td><%= task_status.task_status_description %></td>
        <td><%= link_to 'Show', task_status %></td>
        <td><%= link_to 'Edit', edit_task_status_path(task_status) %></td>
        <td><%= link_to 'Delete', task_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task Status', new_task_status_path %>



<h1>Tasks</h1>

<%= link_to raw("<i class=\"material-icons right\">add_circle</i>New Task"), new_task_path, class: "btn waves-effect waves-light right" %> 
<table class="responsive-table highlight">
  <thead>
    <tr>
      <th><%= sort_link(@search, :job_job_id) %></th>
      <th><%= sort_link(@search, :task_start_date) %></th>
      <th><%= sort_link(@search, :task_end_date) %></th>
      <th><%= sort_link(@search, :task_description) %></th>
      <th><%= sort_link(@search, :task_status_id) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.job_id %></td>
        <td><%= task.task_start_date %></td>
        <td><%= task.task_end_date %></td>
        <td><%= task.task_description %></td>
        <td><%= task.task_status.task_status_description %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

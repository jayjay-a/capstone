<%# these fields are added as a nested form to task form%>
<div id = nested-fields class="nested-fields" style="width:400px">
  <div class="field">
    <%= f.label :subcontractor_id %>
    <%= f.collection_select :subcontractor_id, Subcontractor.all, :subcontractor_id, :subcontractor_name ,{prompt: "Select a subcontractor"}%>
  </div>

  <div class="field">
    <%= f.label :employee_id %>
    <%= f.collection_select :employee_id, Employee.all, :employee_id, :first_name ,{prompt: "Select an employee"}%>
  </div>

  <div class="field">
    <%= f.label :assignment_date %>
    <%= f.date_select :assignment_date, id: :assignment_assignment_date %>
  </div>

  <%= link_to_remove_association "Remove Assignment", f %>
</div>
<%# these fields are added as a nested form to task form%>
<div id = nested-fields class="nested-fields">
  <div class="row"> <%# row 1 %>
    <div class="field col s3">
      <%= f.label :task_note_owner %>
      <%= f.text_field :task_note_owner, id: :task_note_task_note_owner %>
    </div>
    <div class="field col s3">
      <%= f.label :task_note_date %>
    <%= f.text_field :task_note_date, id: :task_note_task_note_date, placeholder: "YYYY-MM-DD", :class => 'datepicker' %>
    </div>
  </div> <%# row 1 end %>

  <div class="row"> <%# row 2 %>
    <div class="field">
      <%= f.label :task_notes %>
      <%= f.text_area :task_notes, id: :task_note_task_notes %>
    </div>
  </div> <%# row 2 end %>

  <%= link_to_remove_association raw("<i class=\"material-icons right\">remove_circle</i>Remove Note"), f, class: "btn waves-effect waves-light" %> 
  <hr>
</div>
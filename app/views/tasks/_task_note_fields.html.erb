<%# these fields are added as a nested form to task form%>
<div id = nested-fields class="nested-fields" style="width:400px">
  <div class="field">
    <%= f.label :task_notes %>
    <%= f.text_area :task_notes, id: :task_note_task_notes, required: true %>
  </div>

  <div class="field">
    <%= f.label :task_note_owner %>
    <%= f.text_field :task_note_owner, id: :task_note_task_note_owner, required: true %>
  </div>

  <div class="field">
    <%= f.label :task_note_date %>
    <%= f.text_field :task_note_date, id: :task_note_task_note_date, placeholder: "YYYY-MM-DD", :class => 'datepicker', required: true %>
  </div>

  <%= link_to_remove_association "Remove Note", f %>
</div>
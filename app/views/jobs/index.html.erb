<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Project</th>
      <th>Customer</th>
      <th>Customer branch</th>
      <th>Job type</th>
      <th>Job status</th>
      <th>Job start date</th>
      <th>Job end date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.project_id %></td>
        <td><%= job.project.customer.customer_name %></td>
        <td><%= job.project.customer.customer_branch %></td>
        <td><%= job.job_type.job_type_description %></td>
        <td><%= job.job_status.job_status_description %></td>
        <td><%= job.job_start_date %></td>
        <td><%= job.job_end_date %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


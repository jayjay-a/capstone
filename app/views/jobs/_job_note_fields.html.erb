<%# these fields are added as a nested form to job form%>
<div id = nested-fields class="nested-fields">
  <div class="row">
    <div class="field col l2">
      <%= f.label :job_note_owner, "Note Owner" %>
      <%= f.text_field :job_note_owner, id: :job_note_job_note_owner %>
    </div>
    <div class="field col l2">
      <%= f.label :job_note_date, "Note Date" %>
      <%= f.text_field :job_note_date, id: :job_note_job_note_date, placeholder: "YYYY-MM-DD", :class => 'datepicker' %>
    </div>
  </div>

  <div class="row">
    <div class="field col l12 m12 s12">
      <%= f.label :job_notes, "Job Notes" %>
      <%= f.text_area :job_notes, id: :job_note_job_notes %>
    </div>
  </div>
  
  <%= link_to_remove_association raw("<i class=\"material-icons right\">remove_circle</i>Remove Note"), f, class: "btn waves-effect waves-light red" %> 
  <hr>
</div>

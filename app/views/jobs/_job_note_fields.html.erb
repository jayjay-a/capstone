<%# these fields are added as a nested form to job form%>
<div id = nested-fields class="nested-fields">
  <div class="row"> <%# row 1 %>
    <div class="field col s3">
      <%= f.label :job_notes_owner %>
      <%= f.text_field :job_notes_owner, id: :job_note_job_notes_owner, required: true %>
    </div>
    <div class="field col s3">
      <%= f.label :job_notes_date %>
      <%= f.text_field :job_notes_date, id: :job_note_job_notes_date, placeholder: "YYYY-MM-DD", :class => 'datepicker', required: true %>
    </div>
  </div> <%# row 1 end %>

  <div class="row"> <%# row 2 %>
    <div class="field">
      <%= f.label :job_notes %>
      <%= f.text_area :job_notes, id: :job_note_job_notes, required: true %>
    </div>
  </div> <%# row 2 end %>

  <%= link_to_remove_association raw("<i class=\"material-icons right\">remove_circle</i>Remove Note"), f, class: "btn waves-effect waves-light" %> 
  <hr>
</div>

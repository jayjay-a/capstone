<%= form_with(model: job_note, local: true) do |form| %>
  <% if job_note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job_note.errors.count, "error") %> prohibited this job_note from being saved:</h2>

      <ul>
      <% job_note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :job_id %>
    <%= form.collection_select :job_id, Project.all, :job_id, :job_id, {:prompt => true}, { :class => 'select2', :selected => 1, "data-placeholder" => 'Select a Project' } %>
  </div>

  <div class="field">
    <%= form.label :job_notes %>
    <%= form.text_area :job_notes, id: :job_note_job_notes, required: true %>
  </div>

  <div class="field">
    <%= form.label :job_note_owner %>
    <%= form.text_field :job_note_owner, id: :job_note_job_note_owner, required: true %>
  </div>

  <div class="field">
    <%= form.label :job_note_date %>
    <%= form.text_field :job_note_date, id: :job_note_job_note_date, placeholder: "YYYY-MM-DD", :class => 'datepicker', :value => job_note.job_note_date || Date.today.strftime('%Y-%m-%d'), required: true %>
  </div>

  <%= button_tag( :class => "btn waves-effect waves-light right") do %>
    Save<i class="material-icons right">save</i>
  <% end %>

<% end %>
